apiVersion: apps/v1
kind: Deployment
metadata:
  name: e-marketplace-api-deployment
  labels:
    app: indy-pubs
    tier: api
spec:
  replicas: 0
  selector:
    matchLabels:
      app: e-marketplace-api
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 3
      maxUnavailable: 0
  template:
    metadata:
      labels:
        app: e-marketplace-api
        tier: api
    spec:
      initContainers:
        - name: e-marketplace-api-init
          image: nexus-registr/lit/molecular-ubuntu:1.0.15
          resources:
            limits:
              memory: 500Mi
            requests:
              memory: 64Mi
              cpu: 5m
          env:
            - name: INIT
              value: '@lit/lit-deploy-init@REPLACE'
            - name: DEPLOY
              value: '@icg/e-marketplace-api@REPLACE'
            - name: NODE_ENV
              value: DEV
          volumeMounts:
            - mountPath: /app
              name: app
      containers:
        - name: e-marketplace-api-image
          image: nexus-registry/lit/molecular-ubuntu:1.0.15
          resources:
            limits:
              memory: 128Mi
              cpu: 50m
            requests:
              memory: 64Mi
              cpu: 5m
          livenessProbe:
            httpGet:
              path: /api/.health/live
              port: 3002
          readinessProbe:
            httpGet:
              path: /api/.health/ready
              port: 3002
          ports:
            - containerPort: 3002
          volumeMounts:
            - mountPath: /app
              name: app
          env:
            - name: POD_NODE_NAME
              valueFrom:
                fieldRef:
                  fieldPath: spec.nodeName
            - name: POD_POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: POD_NAME
              value: e-marketplace-api
            - name: POD_NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: POD_IP
              valueFrom:
                fieldRef:
                  fieldPath: status.podIP
            - name: AUTHORIZATION_CHECK
              value: 'true'
            - name: CLIENT_SECRET
              valueFrom:
                secretKeyRef:
                  name: e-marketplace-api-secrets
                  key: API_AUTH_SECRET
            - name: DEFAULT_CACHE_EXPIRY_TIME
              value: '300'
            - name: ENCRYPTION_KEY
              valueFrom:
                secretKeyRef:
                  name: e-marketplace-api-secrets
                  key: REDIS_ENCRYPTION_KEY
            - name: LITSECURITY_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: e-marketplace-api-secrets
                  key: MARKETPLACESECURITY_PASSWORD
            - name: PRODUCTCATALOG_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: e-marketplace-api-secrets
                  key: PRODUCTCATALOG_PASSWORD
            - name: MARKETPLACE_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: e-marketplace-api-secrets
                  key: MARKETPLACE_PASSWORD
          envFrom:
            - configMapRef:
                name: e-marketplace-api-configmap
      volumes:
        - name: app
          pvc: icg-lit-dev-litvaultcms-litdb-pvc
